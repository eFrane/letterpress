{
    "name": "efrane/letterpress",
    "description": "A configurable output formatting wrapper for PHP.",
    "authors": [
        {
            "name":  "Stefan Graupner",
            "email": "stefan.graupner@gmail.com"
        }
    ],
    "license": "BSD",
    "require": {
        "php": ">=5.4.0",

        "illuminate/config"  : "5.0.*",
        "illuminate/support" : "5.0.*",
        "symfony/finder"     : "2.6.*",
        "masterminds/html5"  : "1.*",
        "jolicode/JoliTypo"  : "0.1.*",
        "erusev/parsedown"   : "1.1.*",
        "embed/embed"        : "1.8.*"
    },
    "require-dev": {
        "codeception/codeception": "~2.0",
        "raulfraile/ladybug": "*"
    },
    "suggest": {
        "nlp-tools/nlp-tools": "For code block fixing and other shenanigans. (NYI)",
        "erusev/parsedown-extra": "Install this to use the markdown extra syntax."
    },
    "autoload": {
        "psr-4": {
            "EFrane\\Letterpress\\": "src/"
        }
    },
    "minimum-stability": "stable"
}
